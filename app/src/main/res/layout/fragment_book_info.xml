<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookInfoFragment"
    android:background = "@color/light_green">


    <TextView
        android:id="@+id/book_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="50dp"
        android:background="@color/blue"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/authour_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/book_background"
        app:layout_constraintStart_toStartOf="@+id/book_background"
        app:layout_constraintTop_toBottomOf="@+id/title_text_info">

        <TextView
            android:id="@+id/by_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/by_text"
            android:textColor="@color/gold"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/authors_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temp Nombre"
            android:textColor="@color/gold"
            android:textSize="25sp" />

    </LinearLayout>

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/back_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/dark_green"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
         android:backgroundTint="@color/dark_green"
        android:text="@string/edit_book_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/title_text_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Temporary Title"
        android:textSize="30sp"
        android:textColor="@color/gold"
        app:layout_constraintEnd_toEndOf="@+id/book_background"
        app:layout_constraintStart_toStartOf="@+id/book_background"
        app:layout_constraintTop_toTopOf="@+id/book_background" />

    <TextView
        android:id="@+id/genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@color/gold"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/book_background"
        app:layout_constraintStart_toStartOf="@+id/book_background"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/book_background"
        app:layout_constraintStart_toStartOf="@+id/book_background"
        app:layout_constraintTop_toBottomOf="@+id/authour_layout">

        <TextView
            android:id="@+id/score_announcement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/score_title"
            android:textColor="@color/gold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/gold"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/book_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="@color/gold"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/book_background"
        app:layout_constraintStart_toStartOf="@+id/book_background"
        app:layout_constraintTop_toBottomOf="@+id/genre" />

</androidx.constraintlayout.widget.ConstraintLayout>